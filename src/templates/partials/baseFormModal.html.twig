<div
    class="base-modal modal modal-sm fade"
    aria-hidden="true"
    data-modal-form-target="modal"
>
  <div class="modal-dialog modal-fullscreen-sm-down modal-dialog-centered">
    <div class="modal-content rounded-bottom-sheet h-auto h-sm-100 mt-auto mt-sm-0" data-turbo="true">
      <div class="modal-header border-bottom-0 px-3">
        {% block modalHeader %}
          <h5 class="modal-title fw-bold">Base Modal Title</h5>
        {% endblock %}
        <button type="button" class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"></button>
      </div>

      <div data-turbo="true" class="modal-body d-flex flex-column gap-3 pt-0">
        {% block modalContent %}
          <turbo-frame
              class="modal-frame"
              loading="lazy"
              id="modal-body"
          >
            <!-- loading placeholder start -->
            <div class="placeholder-glow d-flex flex-column w-100 text-start" style="white-space: normal !important;">
              <div class="mb-3">
                <label for="form_firstName" class="placeholder  form-label required">First name</label>
                <div class="placeholder p-3 w-100"></div>
              </div>
